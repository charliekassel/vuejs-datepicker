.rtl
    direction rtl
.dvdp-datepicker
    position relative
    text-align left
    *
        box-sizing border-box
    &:focus
        background red

.dvdp-datepicker__calendar
    position absolute
    z-index 100
    background white
    border 1px solid #ccc
    width max-content
    height max-content
    user-select none

    header
        display block
        line-height 40px
        position relative
        &.navigation
            position static
            
        .day__month_btn
            text-align center
        
        .monthes-select
            position absolute
            left 0
            right 0
            top 0
            bottom 0
            opacity 0
            width 100%
            cursor pointer




        .prev
        .next
            position absolute
            background #fff
            border-radius 50%
            border 1px solid #cccccc
            display flex
            width 40px
            height 40px
            top 150px 
            
            &.disabled
                border-color #dcdcdc

        .prev
        .next
            &.disabled path
                fill #ddd
            svg
                margin auto
        .prev
            left -20px
            svg
                transform translateX(-1px)
        .next
            right -20px
            svg
                transform translateX(1px)

        .prev:not(.disabled)
        .next:not(.disabled)
            cursor pointer
            &:hover
                border-color #4bd

    .disabled
        cursor default
        color #d8d8d8
    .flex-rtl
        display flex
        width inherit
        flex-wrap wrap

    .cell
        display inline-block
        position relative
        padding 0 5px
        width (100/7)%
        height 40px
        line-height 40px
        text-align center
        vertical-align middle
        border 1px solid transparent
        &:not(.blank):not(.disabled).day
        &:not(.blank):not(.disabled).month
        &:not(.blank):not(.disabled).year
            cursor pointer
            &:hover
                border 1px solid #4bd
        &.selected
            background #4bd
            &:hover
                background #4bd
            &.highlighted
                background #4bd
        &.highlighted
            background #cae5ed
            &.disabled
                color: #a3a3a3
            &.highlight-start
                background #4bd
            &.highlight-end
                background #4bd
        &.grey
            color #888

            &:hover
                background inherit
        &.in-range
            background #b1d5b1
        &.in-hover-range
            background: #b1d5b1
        &.range-start
        &.range-end
            background green


        &.day-header
            font-size 75%
            white-space nowrap
            cursor inherit
            &:hover
                background inherit
        
        @media (max-width: 575px)
            /* Для мобильной версии отключаем перехватывание клика на дочерних элементах даты, т.к. не срабатывает событие выбора даты */
            *
                pointer-events none
        

        .range-slider-start
        .range-slider-end
            position absolute
            height 100%
            width 18px
            top 0
            bottom 0
            display inline-flex
            align-items center
            cursor w-resize
            z-index 1
            .arrow
                display inline-block
                height 0
                width 0
                border-radius 2px
                border-top 11px solid transparent
                border-bottom 11px solid transparent
                animation-duration 0.8s
                animation-name arrow
                animation-iteration-count infinite

        .range-slider-start
            left -10px
            padding-right 9px
            .arrow
                border-left none
                border-right 7px solid #287dfa
                margin-left 1px

        .range-slider-end
            right -10px
            padding-left 11px
            .arrow
                border-right none
                margin-left -1px
                border-left 7px solid #287dfa
       

    .month,
    .year
        width 33.333%

    .monthes-grid
        display grid

    .calendar
        width 310px
        padding 5px 20px

.dvdp-datepicker__clear-button
.dvdp-datepicker__calendar-button
    cursor pointer
    font-style normal
    &.disabled
      color #999
      cursor default

@keyframes arrow 
    from
        margin-left 1px
    50%
        margin-left: -1px
    to
        margin-left: 1px
